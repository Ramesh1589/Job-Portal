<p></p>
<br/>
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col-xs-6 col-lg-6 col-xs-offset-3 col-lg-offset-3"> 
            {{#if enquirySubmitted}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Thanks for getting in touch.</h3>
                    <h4>We will contact you soon...</h4> 
                </div>
            </div>          
            {{else}}
                <div class="panel panel-primary">
                    <div class="panel panel-heading text-success"><h4 class="panel-title text-success">Contact US</h4></div>
                    <div class="panel-body">
                            <form method="post">
                            <input type="hidden" name="action" value="contact">
                            <div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
                                <label>Name</label>
                                <input type="text" name="name.full" placeholder="Enter name" class="form-control" value="{{formData.[name.full]}}"> </div>
                            <div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
                                <label>Email</label>
                                <input type="email" name="email" placeholder="Enter email" class="form-control" value="{{formData.email}}"> </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" name="phone" placeholder="(optional)" class="form-control" value="{{formData.phone}}"> </div>
                            <div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
                                <label>What are you contacting us about?</label>
                                <select name="enquiryType" class="form-control">
                                    <option value="">(select one)</option> {{#each enquiryTypes}}
                                    <option value="{{value}}">{{label}}</option> {{/each}} </select>
                            </div>
                            <div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
                                <label>Message</label>
                                <textarea name="message" placeholder="Leave us a message..." rows="4" class="form-control">{{formData.message}}</textarea>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-success btn-sm">Send</button>
                            </div>
                            </form> 
                    </div>
                </div>        
            {{/if}}
             
        </div>
    </div>
</div>